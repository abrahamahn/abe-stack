{
  "extends": "../../../config/tsconfig.react.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "composite": true,
    "paths": {
      "@abe-stack/shared": ["../../shared/src/index.ts"],
      "@abe-stack/shared/*": ["../../shared/src/*"],
      "@hooks": ["../../client/react/src/hooks"],
      "@hooks/*": ["../../client/react/src/hooks/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.api.tsbuildinfo",
    "types": ["react", "react-dom", "vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../../shared"
    }
  ]
}
