{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "cacheDir": ".cache/turbo",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true,
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.cjs", "**/*.mjs"],
      "outputs": [],
      "cache": true
    },
    "format:check": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json", "**/*.css", "**/*.md"],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.ts", "**/*.tsx", "tsconfig.json", "tsconfig.*.json"],
      "outputs": [],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "test": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.test.ts", "**/*.test.tsx", "vitest.config.*"],
      "outputs": [],
      "cache": true,
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "validate": {
      "dependsOn": ["lint", "type-check", "test"],
      "outputs": [],
      "cache": true
    }
  },
  "globalDependencies": [
    "tsconfig.json",
    ".env",
    ".env.local",
    "config/.prettierrc",
    "eslint.config.mjs"
  ]
}
