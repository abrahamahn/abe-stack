{
  "name": "@abe-stack/jobs",
  "version": "1.0.0",
  "type": "module",
  "description": "Background job queue, write service, and scheduled tasks for abe-stack",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "[ -d dist ] || rm -f tsconfig.tsbuildinfo && tsc --build",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "test": "vitest run --reporter=dot --silent=passed-only",
    "lint": "eslint . --cache --cache-location ../../node_modules/.cache/eslint/.eslintcache-abe-stack-jobs --report-unused-disable-directives"
  },
  "keywords": ["abe-stack", "jobs", "queue", "background-tasks"],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/abrahamahn/abe-stack.git",
    "directory": "infra/jobs"
  },
  "bugs": { "url": "https://github.com/abrahamahn/abe-stack/issues" },
  "homepage": "https://github.com/abrahamahn/abe-stack#readme",
  "publishConfig": { "access": "public", "registry": "https://registry.npmjs.org/" },
  "sideEffects": false,
  "dependencies": {
    "@abe-stack/core": "workspace:*",
    "@abe-stack/db": "workspace:*"
  }
}
