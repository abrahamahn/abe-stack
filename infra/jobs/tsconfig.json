{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": ["node", "vitest/globals"],
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.jobs.tsbuildinfo",
    "paths": {
      "@abe-stack/core": ["../../core/src/index.ts"],
      "@abe-stack/core/*": ["../../core/src/*"],
      "@abe-stack/db": ["../db/src/index.ts"],
      "@abe-stack/db/*": ["../db/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "**/__tests__/**"],
  "references": [
    {
      "path": "../../core"
    },
    {
      "path": "../db"
    }
  ]
}
