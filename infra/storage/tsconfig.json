{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "types": ["node", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@abe-stack/core": ["../../shared/core/src/index.ts"],
      "@abe-stack/core/*": ["../../shared/core/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.storage.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "**/__tests__/**"],
  "references": [
    { "path": "../../shared/core" }
  ]
}
