{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "types": ["node", "vitest/globals"],
    "paths": {
      "@abe-stack/core": ["../../shared/core/src/index.ts"],
      "@abe-stack/core/*": ["../../shared/core/src/*"],
      "@abe-stack/db": ["../db/src/index.ts"],
      "@abe-stack/db/*": ["../db/src/*"],
      "@abe-stack/http": ["../http/src/index.ts"],
      "@abe-stack/http/*": ["../http/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.notifications.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "**/__tests__/**"],
  "references": [
    { "path": "../../shared/core" },
    { "path": "../db" },
    { "path": "../http" }
  ]
}
