{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": ["node", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@abe-stack/core": ["../../core/src/index.ts"],
      "@abe-stack/core/*": ["../../core/src/*"],
      "@abe-stack/contracts": ["../contracts/src/index.ts"],
      "@abe-stack/contracts/*": ["../contracts/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.db.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "**/__tests__/**"],
  "references": [
    { "path": "../../core" },
    { "path": "../contracts" }
  ]
}
