{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": ["node", "vitest/globals"],
    "paths": {
      "@abe-stack/core": ["../../shared/core/src"],
      "@abe-stack/core/*": ["../../shared/core/src/*"],
      "@abe-stack/contracts": ["../contracts/src"],
      "@abe-stack/contracts/*": ["../contracts/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.http.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "**/__tests__/**"],
  "references": [
    {
      "path": "../../shared/core"
    },
    {
      "path": "../contracts"
    }
  ]
}
