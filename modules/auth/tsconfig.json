{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.tsbuildinfo",
    "paths": {
      "@abe-stack/core": ["../../shared/core/src/index.ts"],
      "@abe-stack/core/*": ["../../shared/core/src/*"],
      "@abe-stack/db": ["../../infra/db/src/index.ts"],
      "@abe-stack/db/*": ["../../infra/db/src/*"],
      "@abe-stack/http": ["../../infra/http/src/index.ts"],
      "@abe-stack/http/*": ["../../infra/http/src/*"],
      "@abe-stack/security": ["../../infra/security/src/index.ts"],
      "@abe-stack/security/*": ["../../infra/security/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../../shared/core" },
    { "path": "../../infra/db" },
    { "path": "../../infra/http" },
    { "path": "../../infra/security" }
  ]
}
