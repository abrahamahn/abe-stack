{
  "name": "@abe-stack/auth",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "[ -d dist ] || rm -f node_modules/.cache/typescript/*.tsbuildinfo && tsc --build",
    "lint": "eslint . --cache --cache-location ../../node_modules/.cache/eslint/.eslintcache-abe-stack-auth --report-unused-disable-directives",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@abe-stack/contracts": "workspace:*",
    "@abe-stack/core": "workspace:*",
    "@abe-stack/db": "workspace:*",
    "@abe-stack/http": "workspace:*",
    "@abe-stack/security": "workspace:*",
    "argon2": "^0.41.1",
    "otpauth": "^9.4.1"
  },
  "peerDependencies": {
    "fastify": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "fastify": {
      "optional": true
    }
  },
  "devDependencies": {
    "fastify": "^5.2.0",
    "postgres": "^3.4.8",
    "typescript": "^5.7.2",
    "vitest": "^4.0.0"
  }
}
