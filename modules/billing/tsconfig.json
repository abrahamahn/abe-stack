{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "ES2022"
    ],
    "baseUrl": "./",
    "types": [
      "node",
      "vitest/globals"
    ],
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.billing.tsbuildinfo"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vitest.config.ts"
  ],
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/backend-core"
    }
  ]
}
