{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022"],
    "baseUrl": "./",
    "types": ["vitest/globals", "node"],
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.billing.tsbuildinfo",
    "paths": {
      "@abe-stack/core": ["../../shared/core/src/index.ts"],
      "@abe-stack/core/*": ["../../shared/core/src/*"],
      "@abe-stack/db": ["../../infra/db/src/index.ts"],
      "@abe-stack/db/*": ["../../infra/db/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "vitest.config.ts", "**/*.test.ts", "**/__tests__/**"],
  "references": [
    {
      "path": "../../shared/core"
    },
    {
      "path": "../../infra/db"
    }
  ]
}
