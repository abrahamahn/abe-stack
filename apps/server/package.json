{
  "name": "@abe-stack/server",
  "version": "1.0.0",
  "description": "Minimal Fastify server for abe-stack",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx ../../tools/dev/kill-port.ts 8080 8081 8082 8083 && cross-env NODE_ENV=development tsx src/main.ts",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@abe-stack/shared": "workspace:*",
    "@aws-sdk/client-s3": "^3.677.0",
    "@aws-sdk/credential-providers": "^3.677.0",
    "@aws-sdk/s3-request-presigner": "^3.677.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.0.2",
    "@ts-rest/fastify": "^3.52.1",
    "argon2": "^0.44.0",
    "dotenv-flow": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "fastify": "5.6.2",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.5",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
