{
  "name": "@abe-stack/server",
  "version": "1.0.0",
  "description": "Backend server for abe-stack with framework adapter pattern",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx --tsconfig tsconfig.json src/index.ts",
    "dev:fastify": "cross-env NODE_ENV=development tsx --tsconfig tsconfig.json src/fastify/server.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "build": "tsc --project tsconfig.json",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg --config drizzle.config.ts",
    "db:push": "drizzle-kit push:pg --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "db:check": "tsx --tsconfig tsconfig.json src/scripts/dbHealthCheck.ts",
    "db:seed": "tsx --tsconfig tsconfig.json src/scripts/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@abe-stack/shared": "workspace:*",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.45.1",
    "dotenv": "^17.2.3",
    "dotenv-flow": "^4.1.0",
    "express": "^5.2.1",
    "fastify": "^5.6.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "fastify-type-provider-zod": "^4.0.0",
    "zod": "^4.1.13",
    "helmet": "^8.1.0",
    "inversify": "^6.0.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mime-types": "^3.0.2",
    "postgres": "^3.4.7",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^25.0.3",
    "drizzle-kit": "^0.31.8",
    "supertest": "^7.1.4",
    "cross-env": "^10.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
