{
  "name": "@abe-stack/server",
  "version": "1.0.0",
  "description": "Minimal Fastify server for abe-stack",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "tsx ../../tooling/scripts/dev/kill-port.ts 8080 8081 8082 8083 && tsx --env-file=../../.config/env/.env.development src/main.ts",
    "start": "node --env-file=../../.config/env/.env.production dist/main.js",
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "test": "vitest run --reporter=dot --silent=passed-only",
    "test:unit": "vitest run --reporter=dot --test-name-pattern '(unit|fast)'",
    "test:integration": "vitest run --reporter=dot --test-name-pattern '(integration|critical)'",
    "test:full": "vitest run --reporter=verbose",
    "db:push": "tsx --env-file=../../.config/env/.env.development src/scripts/db-push.ts",
    "db:seed": "tsx --env-file=../../.config/env/.env.development src/scripts/seed.ts",
    "db:bootstrap:admin": "tsx src/scripts/bootstrap-admin.ts",
    "lint": "eslint . --cache --cache-location ../../node_modules/.cache/eslint/.eslintcache-abe-stack-server --report-unused-disable-directives"
  },
  "dependencies": {
    "@abe-stack/admin": "workspace:*",
    "@abe-stack/auth": "workspace:*",
    "@abe-stack/billing": "workspace:*",
    "@abe-stack/cache": "workspace:*",
    "@abe-stack/contracts": "workspace:*",
    "@abe-stack/core": "workspace:*",
    "@abe-stack/db": "workspace:*",
    "@abe-stack/email": "workspace:*",
    "@abe-stack/http": "workspace:*",
    "@abe-stack/jobs": "workspace:*",
    "@abe-stack/notifications": "workspace:*",
    "@abe-stack/realtime": "workspace:*",
    "@abe-stack/security": "workspace:*",
    "@abe-stack/storage": "workspace:*",
    "@abe-stack/users": "workspace:*",
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/credential-providers": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "argon2": "^0.44.0",
    "fastify": "5.7.1",
    "inversify": "^7.11.0",
    "lodash": "^4.17.23",
    "md5": "^2.3.0",
    "postgres": "^3.4.8",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.23",
    "@types/md5": "^2.3.6",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "supertest": "^7.2.2",
    "vite-tsconfig-paths": "^6.0.5"
  }
}
