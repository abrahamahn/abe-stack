{
  "name": "@abe-stack/server",
  "version": "1.0.0",
  "description": "Minimal Fastify server for abe-stack",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx ../../tools/dev/kill-port.ts 8080 8081 8082 8083 && tsx --env-file=../../config/.env/.env.development src/main.ts",
    "start": "node --env-file=../../config/.env/.env.production dist/main.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "VITEST_TARGET=server vitest run --config ../../config/vitest.config.ts",
    "db:generate": "drizzle-kit generate --config ../../config/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ../../config/drizzle.config.ts",
    "db:push": "drizzle-kit push --config ../../config/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ../../config/drizzle.config.ts",
    "db:seed": "tsx --env-file=../../config/.env/.env.development src/scripts/seed.ts"
  },
  "dependencies": {
    "@abe-stack/core": "workspace:*",
    "@aws-sdk/client-s3": "^3.677.0",
    "@aws-sdk/credential-providers": "^3.677.0",
    "@aws-sdk/s3-request-presigner": "^3.677.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.0.2",
    "@ts-rest/fastify": "^3.52.1",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.45.1",
    "fastify": "5.6.2",
    "nodemailer": "^6.9.16",
    "postgres": "^3.4.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.5",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
