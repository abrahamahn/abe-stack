{
  "name": "@abe-stack/server",
  "version": "1.0.0",
  "description": "Minimal Fastify server for abe-stack",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx ../../tools/dev/kill-port.ts 8080 8081 8082 8083 && tsx --env-file=../../config/.env/.env.development src/main.ts",
    "start": "node --env-file=../../config/.env/.env.production dist/main.js",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "test": "vitest run --config ../../vitest.config.ts --project server",
    "test:unit": "vitest run --config ../../vitest.config.ts --project server --test-name-pattern '(unit|fast)'",
    "test:integration": "vitest run --config ../../vitest.config.ts --project server --test-name-pattern '(integration|critical)'",
    "test:full": "vitest run --config ../../vitest.config.ts --project server",
    "db:push": "tsx --env-file=../../config/.env/.env.development src/scripts/db-push.ts",
    "db:seed": "tsx --env-file=../../config/.env/.env.development src/scripts/seed.ts",
    "db:bootstrap:admin": "tsx src/scripts/bootstrap-admin.ts"
  },
  "dependencies": {
    "@abe-stack/core": "workspace:*",
    "@abe-stack/db": "workspace:*",
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/credential-providers": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "argon2": "^0.44.0",
    "fastify": "5.7.1",
    "postgres": "^3.4.8",
    "stripe": "^20.2.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1"
  }
}
