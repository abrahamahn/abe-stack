{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "moduleResolution": "node16",
    "verbatimModuleSyntax": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["./src/*"],
      "@abe-stack/core": ["../../packages/core/dist"],
      "@abe-stack/core/*": ["../../packages/core/dist/*"],
      "@modules/*": ["./src/modules/*"],
      "@infra/*": ["./src/infra/*"],
      "@cache/*": ["./src/infra/cache/*"],
      "@config/*": ["./src/infra/config/*"],
      "@database/*": ["./src/infra/database/*"],
      "@di/*": ["./src/infra/di/*"],
      "@errors/*": ["./src/infra/errors/*"],
      "@files/*": ["./src/infra/files/*"],
      "@jobs/*": ["./src/infra/jobs/*"],
      "@lifecycle/*": ["./src/infra/lifecycle/*"],
      "@logging/*": ["./src/infra/logging/*"],
      "@middleware/*": ["./src/infra/middleware/*"],
      "@processor/*": ["./src/infra/processor/*"],
      "@promises/*": ["./src/infra/promises/*"],
      "@pubsub/*": ["./src/infra/pubsub/*"],
      "@queue/*": ["./src/infra/queue/*"],
      "@search/*": ["./src/infra/search/*"],
      "@security/*": ["./src/infra/security/*"],
      "@server/*": ["./src/infra/server/*"],
      "@storage/*": ["./src/infra/storage/*"],
      "@utils/*": ["./src/infra/utils/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.server.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/core" }]
}
