{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "noEmit": false,
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.server.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@config": [
        "./src/config"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@health": [
        "./src/health"
      ],
      "@health/*": [
        "./src/health/*"
      ],
      "@logger": [
        "./src/logger"
      ],
      "@logger/*": [
        "./src/logger/*"
      ],
      "@routes": [
        "./src/routes"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@shared": [
        "./src/types/context"
      ],
      "@shared/*": [
        "./src/types/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@types/*": [
        "./src/types/*"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../../modules/admin"
    },
    {
      "path": "../../modules/auth"
    },
    {
      "path": "../../modules/billing"
    },
    {
      "path": "../../packages/backend-core"
    },
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../premium/media"
    },
    {
      "path": "../../modules/notifications"
    },
    {
      "path": "../../premium/realtime"
    },
    {
      "path": "../../premium/websocket"
    },
    {
      "path": "../../modules/users"
    },
    {
      "path": "../../modules/system"
    }
  ]
}
