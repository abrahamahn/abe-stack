{
  "name": "@abe-stack/web",
  "version": "1.0.0",
  "description": "React web application for abe-stack",
  "type": "module",
  "scripts": {
    "dev": "tsx ../../tools/scripts/dev/kill-port.ts 5173 && vite --open",
    "build": "vite build",
    "start": "vite preview --open",
    "type-check": "tsc --noEmit",
    "test": "vitest run --reporter=dot --silent=passed-only",
    "lint": "eslint . --cache --cache-location ../../node_modules/.cache/eslint/.eslintcache-abe-stack-web --report-unused-disable-directives"
  },
  "dependencies": {
    "@abe-stack/core": "workspace:*",
    "@abe-stack/sdk": "workspace:*",
    "@abe-stack/stores": "workspace:*",
    "@abe-stack/ui": "workspace:*",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "vite-tsconfig-paths": "^6.0.5"
  }
}
