{
  "extends": "../../config/ts/tsconfig.react.json",
  "compilerOptions": {
    "types": ["vite/client", "react", "react-dom"],

    "paths": {
      "@/*": ["./src/*"],
      "@abe-stack/sdk": ["../../packages/sdk/src"],
      "@abe-stack/core": ["../../packages/core/src"],
      "@abe-stack/ui": ["../../packages/ui/src"],
      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@auth": ["./src/features/auth"],
      "@auth/*": ["./src/features/auth/*"],
      "@dashboard": ["./src/features/dashboard"],
      "@dashboard/*": ["./src/features/dashboard/*"],
      "@demo": ["./src/features/demo"],
      "@demo/*": ["./src/features/demo/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@test": ["./src/test"],
      "@test/*": ["./src/test/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.web.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__"],
  "references": [
    { "path": "../../packages/sdk" },
    { "path": "../../packages/core" },
    { "path": "../../packages/ui" }
  ]
}
