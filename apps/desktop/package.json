{
  "name": "@abe-stack/desktop",
  "version": "1.0.0",
  "description": "Electron desktop application for abe-stack",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:renderer\" \"pnpm run dev:electron\"",
    "dev:standalone": "turbo run dev --filter @abe-stack/desktop",
    "dev:renderer": "vite --port 5174",
    "dev:electron": "NODE_ENV=development pnpm run build:electron && NODE_ENV=development electron --disable-features=SystemdIntegration dist/electron/main.js",
    "build": "pnpm run build:renderer && pnpm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "esbuild src/electron/main.ts src/electron/preload.ts --bundle --platform=node --target=node20 --outdir=dist/electron --external:electron --format=cjs",
    "start": "electron --disable-features=SystemdIntegration dist/electron/main.js",
    "package": "electron-builder",
    "type-check": "tsc --noEmit",
    "test": "vitest run --reporter=dot",
    "lint": "eslint . --cache --cache-location ../../node_modules/.cache/eslint/.eslintcache-abe-stack-desktop --report-unused-disable-directives"
  },
  "dependencies": {
    "@abe-stack/core": "workspace:*",
    "@abe-stack/ui": "workspace:*",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.25.12",
    "vite-tsconfig-paths": "^6.0.5"
  },
  "build": {
    "appId": "com.abe-stack.desktop",
    "productName": "Abe Stack",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
