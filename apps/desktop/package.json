{
  "name": "@abe-stack/desktop",
  "version": "1.0.0",
  "description": "Electron desktop application for abe-stack",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "pnpm run dev:electron",
    "dev:standalone": "tsx ../../tools/dev/kill-port.ts 5174 && (pnpm run dev:renderer & pnpm run dev:electron)",
    "dev:renderer": "vite --config ../../config/vite.desktop.config.ts --port 5174",
    "dev:electron": "NODE_ENV=development tsc -p src/electron/tsconfig.json && NODE_ENV=development electron dist/electron/main.js",
    "build": "pnpm run build:renderer && pnpm run build:electron",
    "build:renderer": "vite build --config ../../config/vite.desktop.config.ts",
    "build:electron": "tsc -p src/electron/tsconfig.json",
    "start": "electron dist/electron/main.js",
    "package": "electron-builder",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@abe-stack/core": "workspace:*",
    "@abe-stack/ui": "workspace:*",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.abe-stack.desktop",
    "productName": "Abe Stack",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
