{
  "extends": "../../../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "../../dist/electron",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "../../../node_modules/.cache/typescript/tsconfig.electron.tsbuildinfo"
  },
  "include": [
    "*.ts",
    "ipc/**/*.ts",
    "types/**/*.ts",
    "utils/**/*.ts",
    "__tests__/**/*.ts",
    "ipc/__tests__/**/*.ts",
    "./__tests__/integration.test.ts"
  ],
  "exclude": ["node_modules"]
}
