{
  "extends": "../../config/ts/tsconfig.react.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@abe-stack/core": ["../../packages/core/src"],
      "@abe-stack/ui": ["../../packages/ui/src"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@config/*": ["./src/config/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@routes/*": ["./src/routes/*"],
      "@utils/*": ["./src/utils/*"],
      "@api/*": ["./src/api/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.desktop.tsbuildinfo"
  },
  "include": ["src/**/*", "electron/**/*"],
  "exclude": ["node_modules", "dist", "__tests__"],
  "references": [{ "path": "../../packages/core" }, { "path": "../../packages/ui" }]
}
