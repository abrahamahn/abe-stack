{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist/electron",
    "rootDir": "src/electron",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false
  },
  "include": ["src/electron/**/*.ts"],
  "exclude": ["src/electron/**/__tests__/**"]
}
