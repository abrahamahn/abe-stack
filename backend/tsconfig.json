{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "..",
    "outDir": "./dist",
    "rootDir": "..",
    "lib": ["ES2023"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
