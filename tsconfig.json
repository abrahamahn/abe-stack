{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@bslt/shared": ["./main/shared/src/index.ts"],
      "@bslt/shared/*": ["./main/shared/src/*"],
      "@bslt/server-system": ["./main/server/system/src/index.ts"],
      "@bslt/server-system/*": ["./main/server/system/src/*"],
      "@bslt/db": ["./main/server/db/src/index.ts"],
      "@bslt/db/*": ["./main/server/db/src/*"],
      "@bslt/core": ["./main/server/core/src/index.ts"],
      "@bslt/core/*": ["./main/server/core/src/*"],
      "@bslt/api": ["./main/client/api/src/index.ts"],
      "@bslt/api/*": ["./main/client/api/src/*"],
      "@bslt/ui": ["./main/client/ui/src/index.ts"],
      "@bslt/ui/*": ["./main/client/ui/src/*"],
      "@hooks": ["./main/client/react/src/hooks"],
      "@hooks/*": ["./main/client/react/src/hooks/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "coverage"],
  "files": [],
  "references": [
    { "path": "./main/apps/desktop" },
    { "path": "./main/apps/server" },
    { "path": "./main/apps/web" },
    { "path": "./main/shared" },
    { "path": "./main/server/system" },
    { "path": "./main/server/media" },
    { "path": "./main/client/engine" },
    { "path": "./main/client/api" },
    { "path": "./main/client/react" },
    { "path": "./main/client/ui" },
    { "path": "./main/server/core" },
    { "path": "./main/server/websocket" },
    { "path": "./main/server/realtime" },
    { "path": "./main/server/db" }
  ]
}
