{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@abe-stack/shared": ["./main/shared/src/index.ts"],
      "@abe-stack/shared/*": ["./main/shared/src/*"],
      "@abe-stack/server-engine": ["./main/server/engine/src/index.ts"],
      "@abe-stack/server-engine/*": ["./main/server/engine/src/*"],
      "@abe-stack/db": ["./main/server/db/src/index.ts"],
      "@abe-stack/db/*": ["./main/server/db/src/*"],
      "@abe-stack/core": ["./main/server/core/src/index.ts"],
      "@abe-stack/core/*": ["./main/server/core/src/*"],
      "@abe-stack/api": ["./main/client/api/src/index.ts"],
      "@abe-stack/api/*": ["./main/client/api/src/*"],
      "@abe-stack/ui": ["./main/client/ui/src/index.ts"],
      "@abe-stack/ui/*": ["./main/client/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "coverage"],
  "files": [],
  "references": [
    { "path": "./main/apps/desktop" },
    { "path": "./main/apps/server" },
    { "path": "./main/apps/web" },
    { "path": "./main/shared" },
    { "path": "./main/server/engine" },
    { "path": "./main/server/media" },
    { "path": "./main/client/engine" },
    { "path": "./main/client/api" },
    { "path": "./main/client/react" },
    { "path": "./main/client/ui" },
    { "path": "./main/server/core" },
    { "path": "./main/server/websocket" },
    { "path": "./main/server/realtime" },
    { "path": "./main/server/db" }
  ]
}
