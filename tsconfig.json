{
  "compilerOptions": {
    /* 1. Monorepo & Build Performance */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "noEmit": false,

    /* 2. Language Fundamentals */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* 3. Modern Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,

    /* 4. Module Safety */
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* 5. Clean Console */
    "ignoreDeprecations": "5.0",
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.tsbuildinfo",
    "paths": {
      "@abe-stack/shared": ["./src/shared/src/index.ts"],
      "@abe-stack/shared/*": ["./src/shared/src/*"],
      "@abe-stack/server-engine": ["./src/server/engine/src/index.ts"],
      "@abe-stack/server-engine/*": ["./src/server/engine/src/*"],
      "@abe-stack/db": ["./src/server/db/src/index.ts"],
      "@abe-stack/db/*": ["./src/server/db/src/*"],
      "@abe-stack/api": ["./src/client/api/src/index.ts"],
      "@abe-stack/api/*": ["./src/client/api/src/*"],
      "@abe-stack/ui": ["./src/client/ui/src/index.ts"],
      "@abe-stack/ui/*": ["./src/client/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "coverage"],
  "files": [],
  "references": [
    {
      "path": "./src/apps/desktop"
    },
    {
      "path": "./src/apps/server"
    },
    {
      "path": "./src/apps/web"
    },
    {
      "path": "./src/shared"
    },
    {
      "path": "./src/server/engine"
    },
    {
      "path": "./src/server/media"
    },
    {
      "path": "./src/client/engine"
    },
    {
      "path": "./src/client/api"
    },
    {
      "path": "./src/client/react"
    },
    {
      "path": "./src/client/ui"
    },
    {
      "path": "./src/server/core"
    },
    {
      "path": "./src/server/websocket"
    },
    {
      "path": "./src/server/realtime"
    },
    {
      "path": "./src/server/db"
    }
  ]
}
