{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "eslint",
      "problemMatcher": ["$eslint-stylish", "$tsc"],
      "label": "eslint: lint whole folder",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
