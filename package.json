{
  "name": "abe-stack",
  "version": "1.0.0",
  "description": "A modern full-stack application with PERN stack - Web, Desktop, Mobile, and Server",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.19 <25"
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:web\"",
    "dev:web": "tsx shared/scripts/dev/kill-port.ts 5173 && vite --config shared/config/build/vite.config.ts --open",
    "dev:server": "tsx shared/scripts/dev/kill-port.ts 8080 && cross-env NODE_ENV=development tsx backend/server/index.ts",
    "dev:desktop": "tsx shared/scripts/dev/kill-port.ts 5174 && concurrently \"vite --config frontend/desktop/vite.config.ts --port 5174\" \"tsc -p frontend/desktop/electron/tsconfig.json && electron frontend/desktop/dist/electron/main.js\"",
    "build": "pnpm type-check && pnpm build:server && pnpm build:web",
    "build:web": "vite build --config shared/config/build/vite.config.ts",
    "build:server": "tsc -p backend/tsconfig.json",
    "build:desktop": "vite build --config frontend/desktop/vite.config.ts && tsc -p frontend/desktop/electron/tsconfig.json",
    "start:server": "cross-env NODE_ENV=production node backend/server/dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.cjs,.mjs,.cts,.mts --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.cjs,.mjs,.cts,.mts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --config shared/config/.prettierrc --ignore-path shared/config/.prettierignore --write .",
    "format:check": "prettier --config shared/config/.prettierrc --ignore-path shared/config/.prettierignore --check .",
    "clean": "rm -rf dist node_modules/.cache backend/server/dist frontend/web/dist frontend/desktop/dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx backend/db/scripts/seed.ts",
    "db:restart": "tsx shared/scripts/restart-db.ts",
    "setup": "tsx shared/scripts/dev/setup.ts",
    "prepare": "simple-git-hooks",
    "docker:up": "docker compose -f shared/config/docker/docker-compose.yml up --build",
    "docker:down": "docker compose -f shared/config/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f shared/config/docker/docker-compose.yml logs -f"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.677.0",
    "@aws-sdk/credential-providers": "^3.677.0",
    "@aws-sdk/s3-request-presigner": "^3.677.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@react-navigation/native": "^7.1.26",
    "@react-navigation/stack": "^7.6.13",
    "@tanstack/react-query": "^5.59.9",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/fastify": "^3.52.1",
    "@ts-rest/react-query": "^3.52.1",
    "bcrypt": "^5.1.1",
    "dompurify": "^3.3.1",
    "dotenv-flow": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "fastify": "5.6.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.6",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-native": "^0.83.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.19.0",
    "react-router-dom": "^7.11.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/runtime": "^7.28.4",
    "@playwright/test": "^1.57.0",
    "@react-native/babel-preset": "^0.83.1",
    "@react-native/metro-config": "^0.83.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/dompurify": "^3.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.2.10",
    "msw": "^2.12.7",
    "prettier": "^3.7.4",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "vitest-axe": "^0.1.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.12",
      "metro-react-native-babel-preset": "npm:@react-native/babel-preset@^0.76.0",
      "@types/react-native": "^0.76.0"
    },
    "onlyBuiltDependencies": [
      "bcrypt",
      "electron"
    ],
    "ignoredBuiltDependencies": [
      "electron-winstaller",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm test",
    "pre-push": "pnpm build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "pnpm prettier --config shared/config/.prettierrc --ignore-path shared/config/.prettierignore --check"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --cache --cache-location .cache/eslint/.cache --max-warnings=0 --no-warn-ignored"
    ]
  },
  "packageManager": "pnpm@10.26.2"
}
