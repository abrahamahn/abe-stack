{
  "name": "@abe-stack/root",
  "version": "1.0.0",
  "description": "A modern full-stack monorepo with PERN stack - Web, Desktop, Mobile, and Server",
  "private": true,
  "engines": {
    "node": ">=18.19 <25"
  },
  "scripts": {
    "config:generate": "tsx config/generators/index.ts",
    "config:generate:check": "tsx config/generators/index.ts --check",
    "config:generate:watch": "tsx config/generators/index.ts --watch",
    "dev": "tsx tools/dev/start-dev.ts",
    "dev:web": "tsx tools/dev/start-dev.ts web",
    "dev:server": "tsx tools/dev/start-dev.ts server",
    "dev:desktop": "tsx tools/dev/start-dev.ts desktop",
    "build": "pnpm theme:build && turbo run build lint type-check test",
    "build:fast": "pnpm theme:build && turbo run build",
    "build:validate": "turbo run validate build",
    "build:web": "turbo run build --filter=@abe-stack/web",
    "build:server": "turbo run build --filter=@abe-stack/server",
    "build:desktop": "turbo run build --filter=@abe-stack/desktop",
    "build:contracts": "turbo run build --filter=@abe-stack/core",
    "build:ui": "turbo run build --filter=@abe-stack/ui",
    "theme:build": "node --import tsx config/lint/sync-css-theme.ts",
    "theme:watch": "node --import tsx config/lint/sync-css-theme.ts --watch",
    "sync:theme": "node --import tsx config/lint/sync-css-theme.ts",
    "sync:theme:watch": "node --import tsx config/lint/sync-css-theme.ts --watch",
    "test": "vitest run",
    "test:dot": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:turbo": "turbo run test",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "lint": "eslint . --cache --cache-location .cache/eslint/.cache --ext .js,.jsx,.ts,.tsx,.cjs,.mjs,.cts,.mts --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint . --cache --cache-location .cache/eslint/.cache --ext .js,.jsx,.ts,.tsx,.cjs,.mjs,.cts,.mts --fix",
    "lint:changed": "eslint --cache --cache-location .cache/eslint/.cache --max-warnings=0",
    "lint:staged": "eslint --cache --cache-location .cache/eslint/.cache --report-unused-disable-directives --max-warnings=0 --no-warn-ignored",
    "sync:headers": "tsx config/lint/sync-file-headers.ts",
    "sync:headers:check": "tsx config/lint/sync-file-headers.ts --check",
    "sync:headers:watch": "tsx config/lint/sync-file-headers.ts --watch",
    "type-check": "turbo run type-check",
    "format": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location .cache/prettier/.cache --write .",
    "format:check": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location .cache/prettier/.cache --check .",
    "validate": "turbo run validate",
    "clean": "turbo run clean && rm -rf node_modules .turbo .cache",
    "clean:cache": "rm -rf .turbo .cache packages/*/tsconfig.tsbuildinfo apps/*/tsconfig.tsbuildinfo packages/*/.cache apps/*/.cache",
    "export": "node tools/export/export-code.ts",
    "export:ui": "node tools/export/export-ui-code.ts",
    "export:server": "node tools/export/export-server-code.ts",
    "db:restart": "tsx tools/restart-db.ts",
    "db:reset": "tsx tools/dev/reset.ts",
    "db:bootstrap": "tsx tools/dev/bootstrap.ts",
    "setup": "tsx tools/dev/setup.ts",
    "prepare": "simple-git-hooks",
    "docker:up": "docker compose --env-file config/.env/.env.development -f config/docker/docker-compose.yml up --build",
    "docker:down": "docker compose --env-file config/.env/.env.development -f config/docker/docker-compose.yml down",
    "docker:logs": "docker compose --env-file config/.env/.env.development -f config/docker/docker-compose.yml logs -f",
    "bundle-size": "tsx tools/export/bundle-size.ts",
    "bundle-size:save": "tsx tools/export/bundle-size.ts --save",
    "pre-commit": "pnpm config:generate && pnpm sync:headers && pnpm sync:theme && pnpm lint-staged && pnpm type-check"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postgres": "^3.4.8",
    "prettier": "^3.8.0",
    "simple-git-hooks": "^2.13.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17",
    "vitest-axe": "^0.1.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.12"
    },
    "onlyBuiltDependencies": [
      "argon2",
      "electron"
    ],
    "ignoredBuiltDependencies": [
      "electron-winstaller",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pre-commit",
    "pre-push": "pnpm build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs,cts,mts,json,css,scss,md}": [
      "pnpm prettier --config config/.prettierrc --ignore-path config/.prettierignore --write"
    ],
    "**/*.{ts,tsx,js,jsx,cjs,mjs,cts,mts}": [
      "pnpm lint:staged"
    ]
  },
  "packageManager": "pnpm@10.26.2"
}
