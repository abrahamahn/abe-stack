{
  "name": "@abe-stack/root",
  "version": "1.0.0",
  "description": "A modern full-stack monorepo with PERN stack - Web, Desktop, Mobile, and Server",
  "private": true,
  "engines": {
    "node": ">=18.19 <25"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@web",
    "dev:server": "turbo run dev --filter=@server",
    "dev:desktop": "turbo run dev --filter=@desktop",
    "dev:start": "tsx tools/start-dev.ts",
    "build": "pnpm format && turbo run build --filter='./packages/*' --filter='./frontend/shared/*' && pnpm lint && turbo run test && turbo run type-check && pnpm theme:build && turbo run build",
    "build:fast": "pnpm theme:build && turbo run build",
    "build:web": "turbo run build --filter=@web",
    "build:server": "turbo run build --filter=@server",
    "build:desktop": "turbo run build --filter=@desktop",
    "build:shared": "turbo run build --filter=@abe-stack/shared",
    "build:ui": "turbo run build --filter=@ui",
    "theme:build": "node --import tsx tools/packages/build-theme-css.ts",
    "test": "turbo run test",
    "test:web": "turbo run test --filter=@web",
    "test:server": "turbo run test --filter=@server",
    "test:desktop": "turbo run test --filter=@desktop",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.cjs,.mjs,.cts,.mts --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.cjs,.mjs,.cts,.mts --fix",
    "type-check": "turbo run type-check",
    "format": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --write .",
    "format:check": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --check .",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "export": "node tools/dev/export-code.ts",
    "export:ui": "node tools/dev/export-ui-code.ts",
    "db:restart": "tsx tools/restart-db.ts",
    "setup": "tsx tools/setup.ts",
    "prepare": "simple-git-hooks",
    "docker:up": "docker compose -f config/docker/docker-compose.yml up --build",
    "docker:down": "docker compose -f config/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f config/docker/docker-compose.yml logs -f",
    "bundle-size": "tsx tools/dev/bundle-size.ts",
    "bundle-size:save": "tsx tools/dev/bundle-size.ts --save"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.2.10",
    "msw": "^2.12.7",
    "prettier": "^3.7.4",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "vitest-axe": "^0.1.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.12"
    },
    "onlyBuiltDependencies": [
      "argon2",
      "electron"
    ],
    "ignoredBuiltDependencies": [
      "electron-winstaller",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm test",
    "pre-push": "pnpm build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "pnpm prettier --config config/.prettierrc --ignore-path config/.prettierignore --check"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --cache --cache-location .cache/eslint/.cache --max-warnings=0 --no-warn-ignored"
    ]
  },
  "packageManager": "pnpm@10.26.2"
}
