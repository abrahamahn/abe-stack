{
  "name": "abe-stack",
  "version": "1.0.0",
  "description": "A modern full-stack boilerplate with PERN stack",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "start:dev": "cross-env NODE_ENV=development tsx src/server/index.ts",
    "dev": "concurrently --names \"SERVER,CLIENT,LINT:SERVER,LINT:CLIENT\" --prefix-colors \"blue,green,yellow,magenta\" --prefix \"[{name}]\" \"npm run dev:server\" \"npm run dev:client\" \"npm run lint:server:watch\" \"npm run lint:client:watch\"",
    "dev:server": "cross-env NODE_ENV=development tsx watch --ignore dist/ src/server/index.ts",
    "dev:client": "vite",
    "build": "npm run check:all && npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.json",
    "preview": "vite preview",
    "setup": "node src/tools/installation/setup.js",
    "seed:demo": "cross-env NODE_ENV=development bash src/server/database/seeds/run_seed.sh",
    "seed:demo:js": "cross-env NODE_ENV=development node src/server/database/seeds/runSeed.mjs",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch --pretty",
    "db:clear": "cross-env NODE_ENV=development bash src/server/database/seeds/clear_data.sh",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "eslint --ext .ts src/server/",
    "lint:server:watch": "esw --ext .ts src/server/ --watch --color",
    "lint:client": "eslint --ext .ts,.tsx src/client/",
    "lint:client:watch": "esw --ext .ts,.tsx src/client/ --watch --color",
    "lint:fix": "npm run lint:server:fix && npm run lint:client:fix",
    "lint:server:fix": "eslint --ext .ts src/server/ --fix --format pretty",
    "lint:client:fix": "eslint --ext .ts,.tsx src/client/ --fix --format pretty",
    "lint:staged": "lint-staged",
    "lint:count": "eslint --ext .ts,.tsx src/ --format stylish | grep -E 'problems|Errors|Warnings' || echo 'No errors found!'",
    "check:all": "npm run lint && npm run type-check",
    "check:watch": "concurrently \"npm run lint:server:watch\" \"npm run lint:client:watch\" \"npm run type-check:watch\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "prepare": "husky",
    "fix:types": "tsx scripts/fix-type-errors.ts"
  },
  "dependencies": {
    "@types/md5": "^2.3.5",
    "@types/sanitize-html": "^2.13.0",
    "@types/zxcvbn": "^4.4.5",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "data-type-ts": "^1.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.19.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "hls.js": "^1.5.20",
    "inquirer": "^8.2.6",
    "jsonwebtoken": "^9.0.2",
    "md5": "^2.3.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^7.14.0",
    "node-cache": "^5.1.2",
    "otplib": "^12.0.1",
    "pg": "^8.11.3",
    "plyr": "^3.7.8",
    "prom-client": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.2.0",
    "sanitize-html": "^2.14.0",
    "sharp": "^0.32.6",
    "uuid": "^11.1.0",
    "winston": "^3.12.0",
    "ws": "^8.16.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.16",
    "@types/mime-types": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.17.24",
    "@types/pg": "^8.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/sharp": "^0.31.1",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.3.4",
    "boxen": "^8.0.1",
    "cli-spinners": "^3.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-formatter-pretty": "^6.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.9.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-watch": "^8.0.0",
    "figlet": "^1.8.0",
    "gradient-string": "^3.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "lodash": "^4.17.21",
    "mocha": "^11.1.0",
    "ora": "^8.2.0",
    "prettier": "^3.5.3",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
