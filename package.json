{
  "name": "@abe-stack/root",
  "version": "1.0.0",
  "description": "Abe-Stack: A Modern Full-Stack Typescript Monorepo for Developers.",
  "private": true,
  "engines": {
    "node": ">=18.19 <25"
  },
  "scripts": {
    "setup": "node --import tsx src/tools/scripts/dev/setup.ts",
    "dev": "node --import tsx src/tools/scripts/dev/dev.ts server web",
    "dev:desktop": "node --import tsx src/tools/scripts/dev/dev.ts server desktop",
    "dev:all": "node --import tsx src/tools/scripts/dev/dev.ts",
    "start": "turbo run start --filter=@abe-stack/web --filter=@abe-stack/server",
    "lint": "turbo run lint --continue",
    "lint:fix": "turbo run lint --continue -- --fix",
    "lint:css": "node --import tsx src/tools/scripts/lint/lint-css-tokens.ts",
    "type-check": "turbo run type-check --continue",
    "format": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --write .",
    "format:check": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --check .",
    "format:check:ci": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --no-cache --check .",
    "test": "turbo run test --output-logs=errors-only --continue",
    "test:verbose": "turbo run test --continue",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "build": "turbo run build lint type-check --output-logs=errors-only && turbo run test --filter=!@abe-stack/server --output-logs=errors-only",
    "clean": "turbo run clean --output-logs=errors-only && rm -rf node_modules",
    "sync:headers": "node --import tsx src/tools/sync/sync-file-headers.ts",
    "sync:headers:staged": "node --import tsx src/tools/sync/sync-file-headers.ts --staged --quiet",
    "sync:headers:check": "node --import tsx src/tools/sync/sync-file-headers.ts --check --quiet",
    "sync:headers:watch": "node --import tsx src/tools/sync/sync-file-headers.ts --watch",
    "build:theme": "node --import tsx src/tools/sync/sync-css-theme.ts",
    "sync:docs": "node --import tsx src/tools/sync/sync-docs.ts",
    "sync:imports": "tsx src/tools/sync/sync-import-aliases.ts",
    "sync:ts": "tsx src/tools/sync/sync-ts-references.ts",
    "ci:verify": "pnpm -w run sync:headers:check && pnpm build",
    "health-check": "node --import tsx src/tools/scripts/audit/health-check.ts",
    "db:audit": "node --import tsx src/tools/scripts/audit/db-schema-audit.ts",
    "db:audit:db": "node --import tsx src/tools/scripts/audit/db-schema-audit.ts --db",
    "db:push": "node --import tsx src/tools/scripts/db/push.ts",
    "db:seed": "node --import tsx src/tools/scripts/db/seed.ts",
    "db:bootstrap": "node --import tsx src/tools/scripts/dev/bootstrap.ts",
    "db:reset": "node --import tsx src/tools/scripts/db/reset.ts",
    "db:bootstrap:admin": "node --import tsx src/tools/scripts/db/bootstrap-admin.ts",
    "scaffold:module": "node --import tsx src/tools/scripts/scaffold/scaffold-module.ts",
    "route:manifest": "node --import tsx src/tools/scripts/audit/route-manifest.ts",
    "audit:api-sync": "node --import tsx src/tools/scripts/audit/api-client-sync.ts",
    "docker:dev": "docker compose --env-file config/env/.env.local -f infra/docker/development/docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f infra/docker/development/docker-compose.dev.yml down",
    "docker:prod": "docker compose --env-file config/env/.env.production -f infra/docker/production/docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker compose -f infra/docker/production/docker-compose.prod.yml down",
    "prepare": "pnpm hooks:install",
    "hooks:install": "git config --local core.hooksPath infra/git-hooks && chmod +x infra/git-hooks/pre-commit infra/git-hooks/pre-push",
    "hooks:cache:maintain": "node --import tsx src/tools/scripts/dev/maintain-local-caches.ts",
    "pre-commit": "pnpm sync:headers:staged && lint-staged",
    "pre-push": "node --import tsx src/tools/scripts/dev/pre-push.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --write",
      "eslint --cache --cache-location node_modules/.cache/eslint/.cache --fix --max-warnings=0 --no-warn-ignored --ignore-pattern config/playwright.config.ts --ignore-pattern src/apps/storybook/**"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --write"
    ]
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.3.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.17"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.12"
    },
    "onlyBuiltDependencies": [
      "argon2",
      "electron"
    ],
    "ignoredBuiltDependencies": [
      "electron-winstaller",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.26.2"
}
