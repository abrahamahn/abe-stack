{
	"name": "abe-stack",
	"version": "1.0.0",
	"description": "A modern full-stack boilerplate with PERN stack",
	"main": "dist/server/index.js",
	"scripts": {
	  "start": "node dist/server/index.js",
	  "start:dev": "cross-env NODE_ENV=development tsx src/server/index.ts",
	  "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
	  "dev:server": "cross-env NODE_ENV=development tsx watch --ignore dist/ src/server/index.ts",
	  "dev:client": "vite",
	  "build": "rimraf dist && npm run build:client && npm run build:server",
	  "build:client": "vite build",
	  "build:server": "tsc --project tsconfig.server.json",
	  "preview": "vite preview",
	  "test": "jest",
	  "clean": "rimraf dist node_modules/.vite src/**/*.js src/**/*.js.map",
	  "type-check": "tsc --noEmit",
	  "type-check:server": "tsc -p tsconfig.server.json --noEmit",
	  "type-check:client": "tsc -p tsconfig.client.json --noEmit"
	},
	"dependencies": {
	  "bcrypt": "^5.1.1",
	  "compression": "^1.7.4",
	  "cookie-parser": "^1.4.6",
	  "cors": "^2.8.5",
	  "date-fns": "^3.4.0",
	  "express": "^4.19.0",
	  "express-rate-limit": "^7.2.0",
	  "fluent-ffmpeg": "^2.1.2",
	  "helmet": "^7.1.0",
	  "io-ts": "^2.2.22",
	  "jsonwebtoken": "^9.0.2",
	  "md5": "^2.3.0",
	  "mime-types": "^2.1.35",
	  "morgan": "^1.10.0",
	  "multer": "^1.4.5-lts.1",
	  "music-metadata": "^7.14.0",
	  "pg": "^8.11.3",
	  "qrcode": "^1.5.4",
	  "range-parser": "^1.2.1",
	  "react": "^19.0.0",
	  "react-dom": "^19.0.0",
	  "react-router-dom": "^7.2.0",
	  "sharp": "^0.33.2",
	  "speakeasy": "^2.0.0",
	  "uuid": "^9.0.1",
	  "winston": "^3.12.0",
	  "ws": "^8.16.0",
	  "zod": "^3.22.4"
	},
	"devDependencies": {
	  "@babel/plugin-transform-react-jsx": "^7.23.4",
	  "@playwright/test": "^1.42.1",
	  "@types/bcrypt": "^5.0.2",
	  "@types/compression": "^1.7.5",
	  "@types/cookie-parser": "^1.4.6",
	  "@types/cors": "^2.8.17",
	  "@types/express": "^4.17.21",
	  "@types/fluent-ffmpeg": "^2.1.24",
	  "@types/jest": "^29.5.12",
	  "@types/jsonwebtoken": "^9.0.6",
	  "@types/lodash": "^4.17.16",
	  "@types/md5": "^2.3.5",
	  "@types/mime-types": "^2.1.4",
	  "@types/morgan": "^1.9.9",
	  "@types/multer": "^1.4.11",
	  "@types/node": "^20.11.24",
	  "@types/pg": "^8.11.0",
	  "@types/qrcode": "^1.5.5",
	  "@types/range-parser": "^1.2.7",
	  "@types/react": "^19.0.0",
	  "@types/react-dom": "^19.0.0",
	  "@types/react-router-dom": "^5.3.3",
	  "@types/sharp": "^0.32.0",
	  "@types/speakeasy": "^2.0.10",
	  "@types/uuid": "^9.0.8",
	  "@types/ws": "^8.5.10",
