{
  "name": "abe-stack",
  "version": "1.0.0",
  "description": "A modern full-stack boilerplate with PERN stack",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" --prefix \"[{name}]\" \"cross-env NODE_ENV=production ts-node -r tsconfig-paths/register src/server/index.ts\" \"vite preview\"",
    "start:server": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register src/server/index.ts",
    "start:client": "vite preview",
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" --prefix \"[{name}]\" \"cross-env NODE_ENV=development tsx watch --ignore dist/ src/server/index.ts\" \"vite\"",
    "dev:server": "cross-env NODE_ENV=development tsx watch --ignore dist/ src/server/index.ts",
    "dev:client": "vite",
    "dev:lint": "concurrently --names \"CLIENT,SERVER,LINT:CLIENT,LINT:SERVER,LINT:TYPE-CHECK\" --prefix-colors \"green,blue,magenta,yellow,cyan\" --prefix \"[{name}]\" \"npm run dev:client\" \"npm run dev:server\" \"npm run lint:client:watch\" \"npm run lint:server:watch\" \"npm run type-check:watch\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.json",
    "setup": "node src/tools/installation/setup.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit --incremental true --pretty --noEmitOnError",
    "type-check:all": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch --pretty",
    "lint": "eslint . --ext .ts",
    "lint:server": "eslint --ext .ts src/server/",
    "lint:server:watch": "esw --ext .ts src/server/ --watch --color",
    "lint:client": "eslint --ext .ts,.tsx src/client/",
    "lint:client:watch": "esw --ext .ts,.tsx src/client/ --watch --color",
    "lint:fix": "npm run lint:server:fix && npm run lint:client:fix",
    "lint:server:fix": "eslint --ext .ts src/server/ --fix --format pretty",
    "lint:client:fix": "eslint --ext .ts,.tsx src/client/ --fix --format pretty",
    "lint:staged": "lint-staged",
    "lint:count": "eslint --ext .ts,.tsx src/ --format stylish | grep -E 'problems|Errors|Warnings' || echo 'No errors found!'",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.774.0",
    "@aws-sdk/lib-storage": "^3.774.0",
    "@aws-sdk/s3-request-presigner": "^3.774.0",
    "@types/joi": "^17.2.2",
    "@types/md5": "^2.3.5",
    "@types/sanitize-html": "^2.13.0",
    "@types/zxcvbn": "^4.4.5",
    "bcrypt": "^5.1.1",
    "data-type-ts": "^1.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "hls.js": "^1.5.20",
    "inquirer": "^8.2.6",
    "inversify": "^6.0.2",
    "ioredis": "^5.6.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "md5": "^2.3.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^7.14.0",
    "node-cache": "^5.1.2",
    "otplib": "^12.0.1",
    "pg": "^8.11.3",
    "plyr": "^3.7.8",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^6.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.2.0",
    "reflect-metadata": "^0.2.2",
    "sanitize-html": "^2.14.0",
    "sharp": "^0.32.6",
    "uuid": "^11.1.0",
    "winston": "^3.12.0",
    "ws": "^8.16.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/bcrypt": "^5.0.2",
    "@types/estree": "^1.0.6",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/figlet": "^1.7.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/history": "^4.7.11",
    "@types/inquirer": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.16",
    "@types/mime-types": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.17.24",
    "@types/pg": "^8.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "cli-spinners": "^3.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-formatter-pretty": "^6.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.9.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-watch": "^8.0.0",
    "figlet": "^1.8.0",
    "glob": "^11.0.1",
    "gradient-string": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "lodash": "^4.17.21",
    "mocha": "^11.1.0",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^3.1.9",
    "ora": "^8.2.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,ts,tsx,css,md}": [
      "prettier --write"
    ]
  }
}
