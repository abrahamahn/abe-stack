{
	"name": "abe-stack",
	"version": "1.0.0",
	"description": "A modern full-stack boilerplate with PERN stack",
	"main": "dist/server/index.js",
	"scripts": {
		"start": "node dist/server/index.js",
		"start:dev": "cross-env NODE_ENV=development tsx src/server/index.ts",
		"dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
		"dev:server": "cross-env NODE_ENV=development tsx watch --ignore dist/ src/server/index.ts",
		"dev:client": "vite",
		"build": "npm run build:client && npm run build:server",
		"build:client": "vite build",
		"build:server": "tsc --project tsconfig.server.json",
		"preview": "vite preview",
		"test": "jest",
		"type-check": "tsc --noEmit",
		"type-check:server": "tsc -p tsconfig.server.json --noEmit",
		"type-check:client": "tsc -p tsconfig.client.json --noEmit"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dashjs": "^5.0.0",
		"express": "^4.19.0",
		"fluent-ffmpeg": "^2.1.2",
		"helmet": "^7.1.0",
		"hls.js": "^1.5.20",
		"jsonwebtoken": "^9.0.2",
		"mime-types": "^2.1.35",
		"multer": "^1.4.5-lts.1",
		"music-metadata": "^7.14.0",
		"pg": "^8.11.3",
		"plyr": "^3.7.8",
		"qrcode": "^1.5.4",
		"range-parser": "^1.2.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router-dom": "^7.2.0",
		"sharp": "^0.33.2",
		"speakeasy": "^2.0.0",
		"winston": "^3.12.0",
		"ws": "^8.16.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@playwright/test": "^1.42.1",
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/fluent-ffmpeg": "^2.1.24",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/lodash": "^4.17.16",
		"@types/mime-types": "^2.1.4",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.11.24",
		"@types/pg": "^8.11.0",
		"@types/qrcode": "^1.5.5",
		"@types/range-parser": "^1.2.7",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@types/react-router-dom": "^5.3.3",
		"@types/sharp": "^0.32.0",
		"@types/speakeasy": "^2.0.10",
		"@types/ws": "^8.5.10",
		"@vitejs/plugin-react": "^4.3.4",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"jest": "^29.7.0",
		"lodash": "^4.17.21",
		"tsx": "^4.7.1",
		"typescript": "^5.8.2",
		"vite": "^6.2.1",
		"vite-tsconfig-paths": "^4.3.1"
	}
}
