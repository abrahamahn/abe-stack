{
  "name": "@bslt/root",
  "version": "1.0.0",
  "description": "BSLT: Build, Scale, Launch, Toggle. A Modern Full-Stack Typescript Monorepo for Developers.",
  "private": true,
  "engines": {
    "node": ">=18.19 <25"
  },
  "scripts": {
    "setup": "node --import tsx main/tools/scripts/dev/setup.ts",
    "dev": "node --import tsx main/tools/scripts/dev/dev.ts server web",
    "dev:desktop": "node --import tsx main/tools/scripts/dev/dev.ts server desktop",
    "dev:all": "node --import tsx main/tools/scripts/dev/dev.ts",
    "start": "turbo run start --filter=@bslt/web --filter=@bslt/server",
    "lint": "pnpm run lint:test-pairs && turbo run lint --continue",
    "lint:test-pairs": "node --import tsx main/tools/scripts/audit/colocated-test-pairs.ts",
    "lint:test-pairs:strict": "node --import tsx main/tools/scripts/audit/colocated-test-pairs.ts --strict",
    "lint:fix": "turbo run lint --continue -- --fix",
    "lint:css": "node --import tsx main/tools/scripts/lint/lint-css-tokens.ts",
    "type-check": "turbo run type-check --continue",
    "format": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --write .",
    "format:check": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --check .",
    "format:check:ci": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --no-cache --check .",
    "test": "turbo run test --output-logs=errors-only --continue -- --coverage.enabled=false",
    "test:fast": "turbo run test:fast --filter=[HEAD]",
    "test:v1": "turbo run test:unit --filter=[HEAD]",
    "test:full": "turbo run test:full",
    "test:coverage": "turbo run test --output-logs=errors-only --continue -- --coverage.enabled=true",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "build": "turbo run build lint type-check --output-logs=errors-only && turbo run test --filter=!@bslt/server --output-logs=errors-only",
    "clean": "turbo run clean --output-logs=errors-only && rm -rf node_modules",
    "sync:headers": "node --import tsx main/tools/sync/sync-file-headers.ts",
    "sync:headers:staged": "node --import tsx main/tools/sync/sync-file-headers.ts --staged --quiet",
    "sync:headers:check": "node --import tsx main/tools/sync/sync-file-headers.ts --check --quiet",
    "sync:headers:watch": "node --import tsx main/tools/sync/sync-file-headers.ts --watch",
    "build:theme": "node --import tsx main/tools/sync/sync-css-theme.ts",
    "sync:docs": "node --import tsx main/tools/sync/sync-docs.ts",
    "api:generate-client": "node --import tsx main/tools/scripts/api/generate-client.ts",
    "sync:imports": "tsx main/tools/sync/sync-import-aliases.ts",
    "sync:ts": "tsx main/tools/sync/sync-ts-references.ts",
    "ci:verify": "pnpm -w run sync:headers:check && pnpm audit:api-governance:strict && pnpm build",
    "health-check": "node --import tsx main/tools/scripts/audit/health-check.ts",
    "db:audit": "node --import tsx main/tools/scripts/audit/db-schema-audit.ts",
    "db:audit:db": "node --import tsx main/tools/scripts/audit/db-schema-audit.ts --db",
    "db:push": "node --import tsx main/tools/scripts/db/push.ts",
    "db:seed": "node --import tsx main/tools/scripts/db/seed.ts",
    "db:bootstrap": "node --import tsx main/tools/scripts/dev/bootstrap.ts",
    "db:reset": "node --import tsx main/tools/scripts/db/reset.ts",
    "db:bootstrap:admin": "node --import tsx main/tools/scripts/db/bootstrap-admin.ts",
    "docker:dev": "docker compose --env-file config/env/.env.local -f infra/docker/development/docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f infra/docker/development/docker-compose.dev.yml down",
    "docker:prod": "docker compose --env-file config/env/.env.production -f infra/docker/production/docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker compose -f infra/docker/production/docker-compose.prod.yml down",
    "prepare": "pnpm hooks:install",
    "hooks:install": "git config --local core.hooksPath infra/git-hooks && chmod +x infra/git-hooks/pre-commit infra/git-hooks/pre-push",
    "hooks:cache:maintain": "node --import tsx main/tools/scripts/dev/maintain-local-caches.ts",
    "pre-commit": "pnpm sync:headers:staged && lint-staged",
    "pre-push": "node --import tsx main/tools/scripts/dev/pre-push.ts",
    "export:server-config": "node --import tsx main/tools/scripts/export/server/server-config.ts",
    "graph:shared": "node --import tsx main/tools/scripts/audit/graph-shared.ts",
    "graph:server": "node --import tsx main/tools/scripts/audit/graph-server.ts",
    "graph:server-system": "node --import tsx main/tools/scripts/audit/graph-server-system.ts",
    "graph:server-system:full": "node --import tsx main/tools/scripts/audit/graph-server-system-full.ts",
    "graph:db": "node --import tsx main/tools/scripts/audit/graph-db.ts",
    "line-count": "node --import tsx main/tools/scripts/audit/line-count.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --write",
      "eslint --cache --cache-location node_modules/.cache/eslint/.cache --max-warnings=0 --no-warn-ignored --ignore-pattern config/playwright.config.ts --ignore-pattern main/apps/storybook/**"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --write"
    ]
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@types/node": "^25.0.9",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.3.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.17"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.12"
    },
    "onlyBuiltDependencies": [
      "argon2",
      "electron"
    ],
    "ignoredBuiltDependencies": [
      "electron-winstaller",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.26.2"
}
