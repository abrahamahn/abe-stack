{
  "name": "@abe-stack/root",
  "version": "1.0.0",
  "description": "Abe-Stack: A Modern Full-Stack Typescript Monorepo for Developers.",
  "private": true,
  "engines": {
    "node": ">=18.19 <25"
  },
  "scripts": {
    "setup": "tsx tooling/scripts/dev/setup.ts",
    "dev": "tsx tooling/scripts/dev/kill-port.ts 5173 8080 3000 && tsx tooling/scripts/dev/dev.ts",
    "start": "turbo run start",
    "lint": "turbo run lint --continue",
    "lint:fix": "turbo run lint --continue -- --fix",
    "type-check": "turbo run type-check --continue",
    "format": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --write .",
    "format:check": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --cache --cache-location node_modules/.cache/prettier/.cache --check .",
    "test": "vitest run --workspace .config/vitest.workspace.ts --reporter=dots",
    "test:watch": "vitest --workspace .config/vitest.workspace.ts --reporter=dots",
    "test:full": "vitest run --workspace .config/vitest.workspace.ts --reporter=verbose",
    "test:e2e": "playwright test --config .config/playwright.config.ts",
    "build": "turbo run build lint type-check --output-logs=errors-only && turbo run test --filter=!@abe-stack/server --output-logs=errors-only",
    "build:headers": "node --import tsx tooling/sync/sync-file-headers.ts",
    "build:theme": "node --import tsx tooling/sync/sync-css-theme.ts",
    "sync:imports": "tsx tools/sync/sync-import-aliases.ts",
    "sync:aliases": "tsx tooling/sync/sync-aliases.ts",
    "sync:aliases:watch": "tsx tooling/sync/sync-aliases.ts --watch",
    "sync:ts": "tsx tooling/sync/sync-ts-references.ts",
    "health-check": "tsx tooling/scripts/audit.ts",
    "clean": "turbo run clean --output-logs=errors-only && rm -rf node_modules .turbo  node_modules/.cache",
    "db:push": "pnpm --filter @abe-stack/server db:push",
    "db:bootstrap": "tsx tooling/scripts/dev/bootstrap.ts",
    "docker:dev": "docker compose --env-file .config/env/.env.development -f infra/docker/development/docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f infra/docker/development/docker-compose.dev.yml down",
    "docker:prod": "docker compose --env-file .config/env/.env.production -f infra/docker/production/docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker compose -f infra/docker/production/docker-compose.prod.yml down",
    "pre-commit": "pnpm theme:build && pnpm format && pnpm lint && pnpm type-check"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.17"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.12"
    },
    "onlyBuiltDependencies": [
      "argon2",
      "electron"
    ],
    "ignoredBuiltDependencies": [
      "electron-winstaller",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.26.2"
}
