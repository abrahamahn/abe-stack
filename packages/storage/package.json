{
  "name": "abeahn-storage",
  "version": "1.1.0",
  "description": "Pluggable storage providers (local & S3) for ABE Stack",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "require": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./local": {
      "import": "./dist/localStorageProvider.js",
      "require": "./dist/localStorageProvider.js",
      "types": "./dist/localStorageProvider.d.ts"
    },
    "./s3": {
      "import": "./dist/s3StorageProvider.js",
      "require": "./dist/s3StorageProvider.js",
      "types": "./dist/s3StorageProvider.d.ts"
    },
    "./factory": {
      "import": "./dist/storageFactory.js",
      "require": "./dist/storageFactory.js",
      "types": "./dist/storageFactory.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abrahamahn/abe-stack.git",
    "directory": "packages/storage"
  },
  "bugs": {
    "url": "https://github.com/abrahamahn/abe-stack/issues"
  },
  "homepage": "https://github.com/abrahamahn/abe-stack#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.677.0",
    "@aws-sdk/client-s3": "^3.677.0",
    "@aws-sdk/s3-request-presigner": "^3.677.0",
    "abeahn-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
