{
  "extends": "../../config/ts/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "paths": {
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@containers": ["./src/layouts/containers"],
      "@containers/*": ["./src/layouts/containers/*"],
      "@elements": ["./src/elements"],
      "@elements/*": ["./src/elements/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@layers": ["./src/layouts/layers"],
      "@layers/*": ["./src/layouts/layers/*"],
      "@layouts": ["./src/layouts"],
      "@layouts/*": ["./src/layouts/*"],
      "@shells": ["./src/layouts/shells"],
      "@shells/*": ["./src/layouts/shells/*"],
      "@theme": ["./src/theme"],
      "@theme/*": ["./src/theme/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "src/test/**"
  ]
}
