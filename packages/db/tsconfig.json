{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "moduleResolution": "node16",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "drizzle",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**"
  ]
}
