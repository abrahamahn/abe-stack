{
  "name": "@abe-stack/db",
  "version": "1.0.0",
  "type": "module",
  "description": "Raw Postgres Database client and migrations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
