{
  "name": "@abe-stack/backend-core",
  "version": "1.0.0",
  "type": "module",
  "description": "Consolidated infrastructure adapters for abe-stack",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "[ -d dist ] || rm -f node_modules/.cache/typescript/*.tsbuildinfo && tsc --build",
    "clean": "rm -rf dist node_modules/.cache/typescript/*.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "test": "vitest run --reporter=dot --silent=passed-only",
    "lint": "eslint . --cache --cache-location ../../node_modules/.cache/eslint/.eslintcache-abe-stack-backend-core --report-unused-disable-directives",
    "migrate": "pnpm --filter @abe-stack/db migrate",
    "postbuild": "node --import tsx ../../tools/scripts/build/ensure-js-extensions.ts dist"
  },
  "keywords": [
    "abe-stack",
    "infra",
    "infrastructure"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/abrahamahn/abe-stack.git",
    "directory": "packages/backend-core"
  },
  "bugs": {
    "url": "https://github.com/abrahamahn/abe-stack/issues"
  },
  "homepage": "https://github.com/abrahamahn/abe-stack#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "dependencies": {
    "@abe-stack/billing": "workspace:*",
    "@abe-stack/notifications": "workspace:*",
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/credential-providers": "^3.600.0",
    "@aws-sdk/s3-request-presigner": "^3.600.0",
    "@elastic/elasticsearch": "^8.13.0",
    "fastify": "^5.0.0",
    "zod": "^3.23.8",
    "@abe-stack/db": "workspace:*",
    "@abe-stack/shared": "workspace:*"
  }
}
