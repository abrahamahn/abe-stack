{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": ["node", "vitest/globals"],
    "paths": {
      "@abe-stack/core": ["../core/src"],
      "@abe-stack/core/*": ["../core/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.stores.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/__tests__/**"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
