{
  "extends": "../../config/ts/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": [
      "node",
      "vitest/globals"
    ],
    "paths": {
      "@abe-stack/core": [
        "../core/src"
      ],
      "@abe-stack/core/*": [
        "../core/src/*"
      ]
    },
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
