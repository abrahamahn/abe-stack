{
  "extends": "../../config/ts/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": [
      "node",
      "vitest/globals"
    ],
    "paths": {
      "@contracts": [
        "./src/contracts"
      ],
      "@contracts/*": [
        "./src/contracts/*"
      ],
      "@stores": [
        "./src/stores"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@validation": [
        "./src/validation"
      ],
      "@validation/*": [
        "./src/validation/*"
      ]
    },
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**"
  ]
}
