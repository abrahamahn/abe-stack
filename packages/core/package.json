{
  "name": "@abe-stack/core",
  "version": "1.1.0",
  "description": "API contracts, shared types, and validation schemas for abe-stack",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./domains/auth": "./src/domains/auth/index.ts",
    "./domains/users": "./src/domains/users/index.ts",
    "./domains/pagination": "./src/domains/pagination/index.ts",
    "./domains/admin": "./src/domains/admin/index.ts",
    "./infrastructure": "./src/infrastructure/index.ts",
    "./infrastructure/async": "./src/infrastructure/async/index.ts",
    "./infrastructure/constants": "./src/infrastructure/constants/index.ts",
    "./infrastructure/crypto": "./src/infrastructure/crypto/index.ts",
    "./infrastructure/errors": "./src/infrastructure/errors/index.ts",
    "./infrastructure/http": "./src/infrastructure/http/index.ts",
    "./infrastructure/stores": "./src/infrastructure/stores/index.ts",
    "./infrastructure/transactions": "./src/infrastructure/transactions/index.ts",
    "./contracts": "./src/contracts/index.ts",
    "./crypto": "./src/infrastructure/crypto/index.ts",
    "./errors": "./src/errors/index.ts",
    "./http": "./src/infrastructure/http/index.ts",
    "./shared": "./src/shared/index.ts",
    "./utils": "./src/utils/index.ts",
    "./env": "./src/env.ts",
    "./media": "./src/media/index.ts"
  },
  "scripts": {
    "build": "[ -d dist ] || rm -f tsconfig.tsbuildinfo && tsc --build && tsc-alias",
    "dev": "echo 'Core package uses source files directly - no build needed for dev'",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "test": "vitest run --project core"
  },
  "keywords": [
    "abe-stack",
    "core",
    "utilities"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/abrahamahn/abe-stack.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/abrahamahn/abe-stack/issues"
  },
  "homepage": "https://github.com/abrahamahn/abe-stack#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "dependencies": {
    "@ts-rest/core": "^3.52.1",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  }
}
