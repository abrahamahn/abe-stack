{
  "name": "@abe-stack/core",
  "version": "1.1.0",
  "description": "API contracts, shared types, and validation schemas for abe-stack",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./contracts": "./src/contracts/index.ts",
    "./utils": "./src/utils/index.ts",
    "./crypto": "./src/crypto/index.ts",
    "./env": "./src/env.ts",
    "./stores": "./src/stores/index.ts",
    "./http": "./src/http/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "[ -d dist ] || rm -f tsconfig.tsbuildinfo && tsc --build && tsc-alias",
    "dev": "echo 'Core package uses source files directly - no build needed for dev'",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "test": "VITEST_TARGET=core vitest run --config ../../config/vitest.config.ts"
  },
  "keywords": [
    "abe-stack",
    "core",
    "utilities"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/abrahamahn/abe-stack.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/abrahamahn/abe-stack/issues"
  },
  "homepage": "https://github.com/abrahamahn/abe-stack#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "dependencies": {
    "@ts-rest/core": "^3.52.1",
    "zod": "^3.22.4",
    "zustand": "^5.0.9"
  },
  "devDependencies": {}
}
