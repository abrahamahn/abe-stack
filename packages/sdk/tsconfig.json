{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": ["vitest/globals", "node"],
    "paths": {
      "@abe-stack/core": ["../core/src"],
      "@abe-stack/core/*": ["../core/src/*"],
      "@abe-stack/contracts": ["../contracts/src"],
      "@abe-stack/contracts/*": ["../contracts/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.sdk.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "vitest.config.ts", "**/*.test.ts", "**/*.test.tsx", "**/__tests__/**"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../contracts"
    }
  ]
}
