{
  "extends": "../../.config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": ["vitest/globals", "node"],
    "paths": {
      "@abe-stack/core": ["../core/src"],
      "@abe-stack/core/*": ["../core/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.sdk.tsbuildinfo"
  },
  "include": ["src/**/*", "vitest.config.ts", "**/*.test.ts", "**/*.test.tsx"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
