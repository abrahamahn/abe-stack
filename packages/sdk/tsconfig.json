{
  "extends": "../../config/ts/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022", "DOM"],
    "types": ["vitest/globals"],
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@abe-stack/core": ["../core/src"],
      "@abe-stack/core/*": ["../core/src/*"],
      "@persistence": ["./src/persistence"],
      "@persistence/*": ["./src/persistence/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/__tests__/**"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
