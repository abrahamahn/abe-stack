{
  "extends": "../../.config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": ["vitest/globals", "node"],
    "paths": {
      "@abe-stack/core": ["../core/src"],
      "@abe-stack/core/*": ["../core/src/*"]
    },
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/__tests__/**"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
