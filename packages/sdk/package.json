{
  "name": "@abe-stack/sdk",
  "version": "1.1.0",
  "description": "SDK for abe-stack API (web/desktop/mobile)",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts",
    "./client": "./src/client.ts",
    "./persistence": "./src/persistence/index.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "[ -d dist ] || rm -f tsconfig.tsbuildinfo && tsc --build",
    "dev": "echo 'SDK package uses source files directly - no build needed for dev'",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "test": "vitest run --project sdk"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/abrahamahn/abe-stack.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/abrahamahn/abe-stack/issues"
  },
  "homepage": "https://github.com/abrahamahn/abe-stack#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "dependencies": {
    "@abe-stack/core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "fake-indexeddb": "^6.2.5"
  }
}
