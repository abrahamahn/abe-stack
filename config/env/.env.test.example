# =============================================================================
# Package Manager
# =============================================================================
PACKAGE_MANAGER_PROVIDER=pnpm
NPM_AUDIT=true
PNPM_STRICT_PEER_DEPS=true
PNPM_FROZEN_LOCKFILE=true

