# =============================================================================
NODE_ENV=test
APP_PORT=3000
API_PORT=3001
APP_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001
APP_URL=http://localhost:3000
HOST=127.0.0.1
PORT=3001
LOG_LEVEL=silent
MAINTENANCE_MODE=false

