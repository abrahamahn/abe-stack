CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false
TRUSTED_PROXIES=127.0.0.1
MAX_PROXY_DEPTH=1

# =============================================================================
# Auth / Security
# =============================================================================
JWT_SECRET=this_is_a_test_secret_that_is_long_enough_for_testing_purposes
