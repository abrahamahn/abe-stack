# =============================================================================
# 1. Core Application
# =============================================================================
NODE_ENV=development  # options: development | production | test
HOST=0.0.0.0
PORT=8080
API_PORT=8080
APP_PORT=5173
API_BASE_URL=http://localhost:8080
APP_URL=http://localhost:5173
