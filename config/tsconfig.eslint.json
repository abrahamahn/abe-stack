{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "baseUrl": "..",
    "paths": {
      "@abe-stack/api-client": ["./packages/api-client/src"],
      "@abe-stack/shared": ["./packages/shared/src"],
      "@abe-stack/shared/*": ["./packages/shared/src/*"],
      "@abe-stack/ui": ["./packages/ui/src"],
      "@abe-stack/db": ["./packages/db/src"],
      "@abe-stack/storage": ["./packages/storage/src"]
    }
  },
  "include": ["../apps/**/*", "../packages/**/*", "../tools/**/*", "../*.ts", "../*.tsx"],
  "exclude": [
    "../node_modules",
    "../dist",
    "../build",
    "../.turbo",
    "../.next",
    "../coverage",
    "../**/__tests__",
    "../**/*.test.ts",
    "../**/*.test.tsx",
    "../apps/server/src/services/email.ts"
  ]
}
