{
  "name": "@bslt/api",
  "version": "1.0.0",
  "type": "module",
  "description": "Lightweight API client wrappers for bslt",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./admin/client": {
      "source": "./src/admin/client.ts",
      "types": "./dist/admin/client.d.ts",
      "default": "./dist/admin/client.js"
    },
    "./hooks": {
      "source": "./src/generated/hooks.ts",
      "types": "./dist/generated/hooks.d.ts",
      "default": "./dist/generated/hooks.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "[ -d dist ] || rm -f node_modules/.cache/typescript/*.tsbuildinfo && tsc --build",
    "clean": "rm -rf dist node_modules/.cache/typescript/*.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "test": "vitest run --reporter=dot --silent=passed-only",
    "lint": "eslint . --cache --cache-location ../../node_modules/.cache/eslint/.eslintcache-bslt-api --report-unused-disable-directives",
    "postbuild": "node --import tsx ../../tools/scripts/build/ensure-js-extensions.ts dist"
  },
  "dependencies": {
    "@bslt/shared": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abrahamahn/bslt.git",
    "directory": "client/api"
  }
}
