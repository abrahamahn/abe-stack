{
  "extends": "../../../config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@bslt/shared": ["../../shared/src/index.ts"],
      "@bslt/shared/*": ["../../shared/src/*"],
      "@bslt/api": ["../api/src/index.ts"],
      "@bslt/api/*": ["../api/src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.engine.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "vitest.config.ts"],
  "references": [
    {
      "path": "../../shared"
    },
    {
      "path": "../api"
    }
  ]
}
