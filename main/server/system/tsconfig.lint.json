{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "composite": false,
    "noEmit": true,
    "paths": {
      "@bslt/shared": ["../../shared/src/index.ts"],
      "@bslt/shared/*": ["../../shared/src/*"],
      "@bslt/db": ["../../server/db/src/index.ts"],
      "@bslt/db/*": ["../../server/db/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "tsconfig*.json"],
  "exclude": ["node_modules", "dist"]
}
