{
  "extends": "../../../config/tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.tsbuildinfo",
    "typeRoots": ["../../../node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@bslt/shared": ["../../shared/src/index.ts"],
      "@bslt/shared/*": ["../../shared/src/*"],
      "@bslt/db": ["../db/src/index.ts"],
      "@bslt/db/*": ["../db/src/*"],
      "@bslt/server-system": ["../system/src/index.ts"],
      "@bslt/server-system/*": ["../system/src/*"],
      "@bslt/media": ["../media/src/index.ts"],
      "@bslt/media/*": ["../media/src/*"],
      "@bslt/core/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../../shared"
    },
    {
      "path": "../db"
    },
    {
      "path": "../system"
    },
    {
      "path": "../media"
    }
  ]
}
