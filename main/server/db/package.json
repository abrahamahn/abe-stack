{
  "name": "@bslt/db",
  "version": "1.0.0",
  "type": "module",
  "description": "Raw Postgres Database client and migrations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./testing": {
      "source": "./src/testing/index.ts",
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    }
  },
  "scripts": {
    "build": "[ -d dist ] || rm -f node_modules/.cache/typescript/*.tsbuildinfo && tsc --build",
    "postbuild": "node --import tsx ../../tools/scripts/build/ensure-js-extensions.ts dist",
    "clean": "rm -rf dist node_modules/.cache/typescript/*.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "test": "vitest run --reporter=dot --silent=passed-only",
    "lint": "eslint . --max-warnings 0"
  },
  "keywords": [
    "postgres",
    "database",
    "raw",
    "sql"
  ],
  "dependencies": {
    "@bslt/shared": "workspace:*",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "tsx": "^4.15.0",
    "typescript": "^5.9.3"
  }
}
