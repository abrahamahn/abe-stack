{
  "extends": "../../../config/tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "noEmit": false,
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsconfig.server.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@bslt/shared": ["../../shared/src/index.ts"],
      "@bslt/shared/*": ["../../shared/src/*"],
      "@bslt/server-system": ["../../server/system/src/index.ts"],
      "@bslt/server-system/*": ["../../server/system/src/*"],
      "@bslt/db": ["../../server/db/src/index.ts"],
      "@bslt/db/*": ["../../server/db/src/*"],
      "@bslt/core": ["../../server/core/src/index.ts"],
      "@bslt/core/*": ["../../server/core/src/*"],
      "@bslt/realtime": ["../../server/realtime/src/index.ts"],
      "@bslt/realtime/*": ["../../server/realtime/src/*"],
      "@bslt/media": ["../../server/media/src/index.ts"],
      "@bslt/media/*": ["../../server/media/src/*"],
      "@bslt/websocket": ["../../server/websocket/src/index.ts"],
      "@bslt/websocket/*": ["../../server/websocket/src/*"],
      "@/*": ["./src/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@health": ["./src/health"],
      "@health/*": ["./src/health/*"],
      "@routes": ["./src/routes"],
      "@routes/*": ["./src/routes/*"],
      "@shared": ["./src/types/context"],
      "@shared/*": ["./src/types/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../../server/core"
    },
    {
      "path": "../../server/system"
    },
    {
      "path": "../../shared"
    },
    {
      "path": "../../server/media"
    },
    {
      "path": "../../server/realtime"
    },
    {
      "path": "../../server/websocket"
    },
    {
      "path": "../../server/db"
    }
  ]
}
