{
  "name": "@bslt/web",
  "version": "1.0.0",
  "description": "React web application for bslt",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview --port 4173",
    "api:index": "node scripts/generate-api-index.mjs",
    "type-check": "tsc -p tsconfig.typecheck.json",
    "test": "vitest run --reporter=dot --silent=passed-only",
    "lint": "eslint . --cache --cache-location ../../node_modules/.cache/eslint/.eslintcache-bslt-web --report-unused-disable-directives",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@bslt/api": "workspace:*",
    "@bslt/client-engine": "workspace:*",
    "@bslt/react": "workspace:*",
    "@bslt/shared": "workspace:*",
    "@bslt/ui": "workspace:*",
    "@sentry/react": "^9.1.0",
    "@simplewebauthn/browser": "^13.2.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vite": "^6.0.0"
  }
}
